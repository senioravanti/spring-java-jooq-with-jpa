<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
>
  <changeSet id="create-animals-table" author="senioravanti">
    <createTable tableName="animals">
      <column name="animal_id" type="INT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="animal_russian_name" type="VARCHAR(32)">
        <constraints nullable="false" unique="true"/>
      </column>

      <column name="animal_latin_name" type="VARCHAR(64)">
        <constraints nullable="false" unique="true"/>
      </column>

      <column name="animal_class" type="VARCHAR(24)">
        <constraints nullable="false"/>
      </column>

      <column name="animal_order" type="VARCHAR(24)">
        <constraints nullable="false"/>
      </column>

      <column name="animal_family" type="VARCHAR(36)">
        <constraints nullable="false"/>
      </column>

      <column name="animal_genus" type="VARCHAR(24)">
        <constraints nullable="false"/>
      </column>

      <column name="animal_species" type="VARCHAR(128)"/>

      <column name="animal_natural_habitat" type="VARCHAR(2048)"/>

      <column name="animal_image_uri" type="VARCHAR(128)"/>
    </createTable>
  </changeSet>
</databaseChangeLog>